@model NewsResource

@{
    ViewData["Title"] = "Update Article";
}

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">@ViewData["Title"]</h2>
    </div>
</div>

<br>

<div class="border container" style="padding: 30px;">
    <form asp-action="Update" method="POST">
        <input type="hidden" name="id" value="@Model.Id">
        <label asp-for="Title">Title</label>
        <br>
        <input asp-for="Title" value="@Model.Title">
        <br>
        <label asp-for="ArticleType">Article Type</label>
        <br>
        <input asp-for="ArticleType" value="@Model.ArticleType">
        <br>
        <label asp-for="Source">Source</label>
        <br>
        <input asp-for="Source" value="@Model.Source">
        <br>
        <label asp-for="URL">URL</label>
        <br>
        <input asp-for="URL" value="@Model.URL">
        <br><br>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    Update
                </button>
            </div>
            <div class="col-3">
                <a href="javascript: history.go(-1)" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
